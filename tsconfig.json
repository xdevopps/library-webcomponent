{
  "compilerOptions": {
     "target": "es6", 
     "module": "esnext",                                     
     "moduleResolution": "node",                    
     "sourceMap": true,  
     "baseUrl": ".",   
     "paths": {
       "@/helpers":[
         "helpers/index.ts"
       ],
       "@/components":[
        "src/components/index.ts"
       ],
       "@/templates":[
        "src/templates/index.ts"
       ],
     },          
     "outDir": "dist",                                   
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,           
     "strict": true,                                       
     "skipLibCheck": true ,                                
  }
  ,
  "include": [
    "types/*.d.ts",
    "src/**/*",
    "helpers/**/*.ts"
  ],
}
