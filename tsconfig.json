{
  "compilerOptions": {
     "target": "es6", 
     "module": "esnext",                                     
     "moduleResolution": "node",                    
     "sourceMap": true,  
     "baseUrl": ".",   
     "paths": {
       "@/*": [
         "src/*",
         "helpers/*",
         "libs/*"
       ]     
     },          
     "outDir": "dist",                                   
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,           
     "strict": true,                                       
     "skipLibCheck": true , 
     "experimentalDecorators": true                               
  }
  ,
  "include": [
    "types/*.d.ts",
    "src/**/*",
    "helpers/**/*.ts",
    "libs/**/*.ts"
  ],
}
